@model Halbot.Models.IndexModel

@{
    ViewData["Title"] = "Overview";
    Layout = "_Layout";
}


<table>

    <!-- table headers -->
    <tr>
        <th>Distance</th>
        <th>Pace</th>
        <th>Date</th>
        <th>Route</th>
        <th>Effort</th>
    </tr>

    <!-- rows -->
    @foreach (var activity in Model.Activities)
    {

        <tr>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@activity.ID">@string.Format("{0:0.00} km", (double)activity.Distance / 1000)</a></td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@activity.ID">@string.Format("{0} m/km", activity.Pace)</a></td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@activity.ID">@string.Format("{0:D}", activity.Date)</a></td>
            <td>
                @if (!String.IsNullOrEmpty(activity.Image))
                {<a asp-controller="Home" asp-action="Edit" asp-route-id="@activity.ID"><img src="@activity.Image" height="32" width="32" /></a>}
            </td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@activity.ID">@string.Format("{0}", activity.Effort)</a></td>
        </tr>
    }

</table>

