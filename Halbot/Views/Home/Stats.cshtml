@model Halbot.Models.StatsModel

@{
    ViewData["Title"] = "Stats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- week -->
<div class="box">
    <table>
        <tr>
            <th class="left">&nbsp;</th>
            <th class="right">Last week:</th>
            <th class="right">This week:</th>
        </tr>
        @foreach (var item in Model.Week)
        {
            <tr>
                <td class="left">@item.Item1</td>
                <td class="right">@item.Item2</td>
                <td class="right">@item.Item3</td>
            </tr>
        }
    </table>

</div>
<div class="box">

    <!-- month -->
    <table>
        <tr>
            <th class="left">&nbsp;</th>
            <th class="right">Last month:</th>
            <th class="right">This month:</th>
        </tr>
        @foreach (var item in Model.Month)
        {
            <tr>
                <td class="left">@item.Item1</td>
                <td class="right">@item.Item2</td>
                <td class="right">@item.Item3</td>
            </tr>
        }
    </table>

</div>
<div class="box">


    <!-- year -->
    <table>
        <tr>
            <th class="left">&nbsp;</th>
            <th class="right">Last year:</th>
            <th class="right">This year:</th>
        </tr>
        @foreach (var item in Model.Year)
        {
            <tr>
                <td class="left">@item.Item1</td>
                <td class="right">@item.Item2</td>
                <td class="right">@item.Item3</td>
            </tr>
        }
    </table>

</div>
<div class="box">

    <table>
        <tr>
            <th class="left">&nbsp;</th>
            <th class="right">Lifetime:</th>
        </tr>
        @foreach (var item in Model.Alltime)
        {
            <tr>
                <td class="left">@item.Item1</td>
                <td class="right">@item.Item2</td>
            </tr>
        }
    </table>

    <!-- bests -->

</div>
<div class="box">

    <table>
        <tr>
            <th>Top 5 best effort:</th>
        </tr>
        @foreach (var item in Model.BestEffort)
        {
            <tr>
                <td class="left">@(Model.BestEffort.IndexOf(item) + 1)<text>.</text></td>
                <td class="left">@Html.ActionLink(@item.Effort.ToString(), "Run", new { id = item.Id })</td>
                <td class="Left">@Html.ActionLink("on " + item.Date.ToString("dddd, MMMM dd yyyy"), "Run", new { id = item.Id })</td>
                <td class="right" width="100px">
                    <div style="display: inline-block; width: @Math.Round((100 / (double) (Model.BestEffort.First().Effort / (double) item.Effort)))%; height: 100%; background-color: Red">&nbsp;</div>
                </td>
            </tr>
        }
    </table>

</div>
<div class="box">

    <table>
        <tr>
            <th>Top 5 longest distance:</th>
        </tr>
        @foreach (var item in Model.LongestRuns)
        {
            <tr>
                <td class="left">@(Model.LongestRuns.IndexOf(item) + 1)<text>.</text></td>
                <td class="left">@Html.ActionLink((item.Distance / 1000).ToString("F2") + " km", "Run", new { id = item.Id })</td>
                <td class="Left">@Html.ActionLink("on " + item.Date.ToString("dddd, MMMM dd yyyy"), "Run", new { id = item.Id })</td>
                <td class="right" width="100px">
                    <div style="display: inline-block; width: @Math.Round((100 / ((double) Model.LongestRuns.First().Distance / (double) item.Distance)))%; height: 100%; background-color: goldenrod">&nbsp;</div>
                </td>
            </tr>
        }
    </table>

</div>
<div class="box">

    <table>
        <tr>
            <th>Top 5 fastest pace:</th>
        </tr>
        @foreach (var item in Model.FastestRuns)
        {
            <tr>
                <td class="left">@(Model.FastestRuns.IndexOf(item) + 1)<text>.</text></td>
                <td class="left">@Html.ActionLink(item.Pace + " m/km", "Run", new { id = item.Id })</td>
                <td class="Left">@Html.ActionLink("on " + item.Date.ToString("dddd MMMM dd yyyy"), "Run", new { id = item.Id })</td>
                <td class="right" width="100px">
                    <div style="display: inline-block; width: @Math.Round((100 / ((double) Model.FastestRuns.First().Speed / (double) item.Speed)))%; height: 100%; background-color: cadetblue">&nbsp;</div>
                </td>
            </tr>
        }
    </table>

</div>
<div class="box">

    <table>
        <tr>
            <th>Top 5 highest climb:</th>
        </tr>
        @foreach (var item in Model.HighestRuns)
        {
            <tr>
                <td class="left">@(Model.HighestRuns.IndexOf(item) + 1)<text>.</text></td>
                <td class="left">@Html.ActionLink(Math.Round(item.Climb) + " meter", "Run", new { id = item.Id })</td>
                <td class="Left">@Html.ActionLink("on " + @item.Date.ToString("dddd, MMMM dd yyyy"), "Run", new { id = item.Id })</td>
                <td class="right" width="100px">
                    <div style="display: inline-block; width: @Math.Round((100 / ((double) Model.HighestRuns.First().Climb / (double) item.Climb)))%; height: 100%; background-color: LimeGreen">&nbsp;</div>
                </td>
            </tr>
        }
    </table>

</div>
<div class="box">

    <table>
        <tr>
            <th>Top 5 best week (by volume):</th>
        </tr>
        @foreach (var item in Model.BestWeeks)
        {
            <tr>
                <td class="left">@item.Key</td>
                <td class="right">@item.Value.ToString("F2") km</td>
            </tr>
        }
    </table>

</div>
<div class="box">

    <table>
        <tr>
            <th>Top 5 best months (by volume):</th>
        </tr>
        @foreach (var item in Model.BestMonths)
        {
            <tr>
                <td class="left">@item.Key</td>
                <td class="right">@item.Value.ToString("F2") km</td>
            </tr>
        }
    </table>

</div>
<div class="box">

    <table>
        <tr>
            <th>Top 5 best years (by volume):</th>
        </tr>
        @foreach (var item in Model.BestYears)
        {
            <tr>
                <td class="left">@item.Key</td>
                <td class="right">@item.Value.ToString("F2") km</td>
            </tr>
        }
    </table>
</div>
